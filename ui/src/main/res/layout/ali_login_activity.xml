<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".alActivity.AliLoginActivity">

    <include
        android:id="@+id/cs_tool_bar"
        layout="@layout/ali_custom_toolbar"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="0dp"
        android:background="@color/bg_blue_color"
        app:layout_constraintTop_toBottomOf="@+id/cs_tool_bar"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/ali_login_welcom_radius"
        app:layout_constraintTop_toBottomOf="@+id/cs_tool_bar"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/cs_tool_bar"
        >
        <TextView
            android:id="@+id/tx_welcome"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="Welcome to"
            android:textColor="@color/bg_light_white_color"
            android:textStyle="bold"
            android:textSize="42sp"
            app:layout_constraintTop_toTopOf="parent"
            />


        <TextView
            android:id="@+id/tx_sonic"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="SONIC VPN"
            android:textColor="@color/bg_blue_color"
            android:textStyle="bold"
            android:textSize="42sp"
            app:layout_constraintTop_toBottomOf="@+id/tx_welcome"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <EditText
        android:id="@+id/et_user_name"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_gravity="center_horizontal"
        android:drawablePadding="10dp"
        android:paddingLeft="8dp"
        android:gravity="center_vertical"
        android:hint="Email adress"
        android:background="@color/bg_light_white_color"
        android:singleLine="true"
        android:textColor="#000000"
        android:textColorHint="#a3a3a3"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/cl_welcome"
        />
    <!-- android:background="@drawable/login_user_name_bg"
         android:drawableLeft="@drawable/user_name_icon"
    -->
    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_gravity="center_horizontal"
        android:drawablePadding="10dp"
        android:paddingLeft="8dp"
        android:gravity="center_vertical"
        android:hint="Password"
        android:singleLine="true"
        android:background="@color/bg_light_white_color"
        android:textColor="#000000"
        android:textColorHint="#a3a3a3"
        android:textSize="14sp"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@+id/et_user_name"
        />

    <TextView
        android:id="@+id/tv_forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginTop="18dp"
        android:text="Forgot password?"
        android:textSize="22sp"
        android:textColor="@color/bg_blue_color"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/et_password"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:id="@+id/bt_login"
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_height="45dp"
        android:layout_marginTop="60dp"
        android:text="@string/create_account"
        android:background="@drawable/ali_login_trial_radius"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_password"
        >
    </Button>

    <TextView
        android:id="@+id/tv_new_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="New User?"
        android:textSize="22sp"
        android:textColor="@color/bg_blue_color"
        app:layout_constraintTop_toBottomOf="@+id/bt_login"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/tv_user_line"
        android:layout_width="110dp"
        android:layout_height="1.5dp"
        android:background="@color/bg_blue_color"
        app:layout_constraintTop_toBottomOf="@+id/tv_new_user"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>