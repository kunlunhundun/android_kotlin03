<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="15dp"
    android:background="@color/white"
    >

    <ImageView
        android:id="@+id/iv_left_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:src="@mipmap/icon_message_avatar"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="15dp"
        android:text="4828974774@gmail.com"
        android:textSize="16sp"
        android:textColor="#6C87A0"
        app:layout_constraintTop_toTopOf="@+id/iv_left_avatar"
        app:layout_constraintLeft_toRightOf="@id/iv_left_avatar"
        />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:text="2020.07.01"
        android:textSize="13sp"
        android:textColor="#6C87A0"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_username"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/tv_question"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="dllaleklejldlklelddeeekdekellekkldkkdakldklklalkkldkldklkakkdklkldllakdkkdldlkalldkakkldkdklskjdjjdjmdsjkdjkjks"
        android:textSize="16sp"
        android:textColor="@color/text_666_color"
        android:lineSpacingExtra="6dp"
        android:ellipsize="end"
        android:maxLines="20"
        app:layout_constraintTop_toBottomOf="@+id/tv_username"
        app:layout_constraintLeft_toRightOf="@id/iv_left_avatar"
        app:layout_constraintRight_toRightOf="parent"

        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_answer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:background="@color/bg_light_white_color"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/tv_question"
        app:layout_constraintLeft_toRightOf="@+id/iv_left_avatar"
        app:layout_constraintRight_toRightOf="parent"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="3dp"
            android:src="@mipmap/icon_msg_reply"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/tv_gf_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="38dp"
            android:text="Cattle VPN"
            android:textColor="@color/text_blue_color"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/tv_answer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="dllaleklejldlklelddeeekdekellekkldkkdakldklklalkkldkldklkakkdklkldllakdkkdldlkalldkakkldkdklskjdjjdjmdsjkdjkjks"
            android:textSize="16sp"
            android:textColor="@color/text_666_color"
            android:lineSpacingExtra="6dp"
            android:ellipsize="end"
            android:maxLines="20"
            app:layout_constraintTop_toBottomOf="@+id/tv_gf_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>