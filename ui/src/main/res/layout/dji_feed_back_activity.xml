<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_light_white_color"
    tools:context=".DjiActivity.DjiFeedBackActivity">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/dji_custom_toolbar"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_title"
        android:layout_width="match_parent"
        android:background="@color/bg_light_white_color"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@+id/tool_bar"
        >
        <TextView
            android:id="@+id/tv_title"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="60dp"
            android:gravity="center_vertical"
            android:text="Please select the type of question"
            android:textColor="@color/text_black_color"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_func_item"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@+id/cl_title"
        >
        <TextView
            android:id="@+id/tv_func_title"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="60dp"
            android:gravity="center_vertical"
            android:text="Functional problems"
            android:textColor="@color/text_black_color"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <CheckBox
            android:id="@+id/ck_func_item"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:background="@drawable/ali_app_detail_check"
            android:button="@null"
            android:checked="false"
            android:clickable="false"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_optimization_item"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@+id/cl_func_item"
        >
        <TextView
            android:id="@+id/tv_optimization_title"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="60dp"
            android:gravity="center_vertical"
            android:text="Optimization Suggestions"
            android:textColor="@color/text_black_color"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <CheckBox
            android:id="@+id/ck_optimization_item"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:background="@drawable/ali_app_detail_check"
            android:button="@null"
            android:checked="false"
            android:clickable="false"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_other_item"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@+id/cl_optimization_item"
        >
        <TextView
            android:id="@+id/tv_other_title"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="60dp"
            android:gravity="center_vertical"
            android:text="Other feedback"
            android:textColor="@color/text_black_color"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <CheckBox
            android:id="@+id/ck_other_item"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:background="@drawable/ali_app_detail_check"
            android:button="@null"
            android:checked="true"
            android:clickable="false"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_desc_detail"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="0dp"
        android:paddingLeft="15dp"
        android:gravity="center_vertical"
        android:text="Please describe your problem in detail"
        android:textColor="@color/text_black_color"
        android:textSize="14sp"
        android:background="@color/bg_light_white_color"
        app:layout_constraintTop_toBottomOf="@+id/cl_other_item"
        />

    <EditText
        android:id="@+id/et_feedback_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="15dp"
        android:background="@color/white"
        android:textSize="14sp"
        android:text=""
        android:textColor="@color/text_666_color"
        android:maxEms="20"
        android:minEms="20"
        android:hint="Enter any comments or Suggestions you want to make..."
        android:gravity="top"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_desc_detail"
        app:layout_constraintBottom_toTopOf="@+id/btn_feed_back"

        />

    <Button
        android:id="@+id/btn_feed_back"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="0dp"
        android:text="Send"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="@color/btn_blue_color"
        app:layout_constraintBottom_toBottomOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>