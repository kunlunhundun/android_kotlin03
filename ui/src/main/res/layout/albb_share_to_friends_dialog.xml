<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/albb_share_radius"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="15dp"
            android:text="Tell your friends"
            android:textColor="@color/text_black_color"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="50dp"
            android:background="@color/line_color"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ImageView
            android:id="@+id/iv_sms"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="30dp"
            android:background="@mipmap/icon_app_sms"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_line"
            />
        <ImageView
            android:id="@+id/iv_facebook"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="33dp"
            android:background="@mipmap/icon_app_facebook"
            android:visibility="visible"
            android:layout_marginTop="30dp"
            app:layout_constraintLeft_toRightOf="@+id/iv_sms"
            app:layout_constraintTop_toBottomOf="@+id/view_line"
            />

        <ImageView
            android:id="@+id/iv_instagram"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="33dp"
            android:background="@mipmap/icon_app_instagram"
            android:layout_marginTop="30dp"
            app:layout_constraintLeft_toRightOf="@+id/iv_facebook"
            app:layout_constraintTop_toBottomOf="@+id/view_line"
            />

        <ImageView
            android:id="@+id/iv_whatsapp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="33dp"
            android:background="@mipmap/icon_app_whatsapp"
            android:layout_marginTop="30dp"
            app:layout_constraintLeft_toRightOf="@+id/iv_instagram"
            app:layout_constraintTop_toBottomOf="@+id/view_line"
            />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/cancel"
            android:textColor="@color/text_black_color"
            android:textSize="18sp"
            android:background="@color/bg_light_white_color"
            app:layout_constraintBottom_toBottomOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>