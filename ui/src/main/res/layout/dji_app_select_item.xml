<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    >
    <CheckBox
        android:id="@+id/cb_app_select"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        android:button="@drawable/ali_app_selector"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <ImageView
        android:id="@+id/iv_icon_app"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toRightOf="@+id/cb_app_select"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:src="@tools:sample/avatars"
        >
    </ImageView>

    <TextView
        android:id="@+id/tv_app_name"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:gravity="center_vertical"
        android:text="deeeeeeeddeddd"
        android:textColor="@color/text_black_color"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/iv_icon_app"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/app_line"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/line_color"
        app:layout_constraintLeft_toLeftOf="@+id/tv_app_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>